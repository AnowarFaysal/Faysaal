<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn9"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="1dp"
        android:text="9" />

    <Button
        android:id="@+id/btn8"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn9"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="89dp"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="0dp"
        android:text="8" />

    <Button
        android:id="@+id/btn7"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn9"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:text="7" />

    <Button
        android:id="@+id/btn6"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="157dp"
        android:text="6" />

    <Button
        android:id="@+id/btn5"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn6"
        android:layout_alignEnd="@+id/btn8"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:text="5" />

    <Button
        android:id="@+id/btn4"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn7"
        android:layout_alignBottom="@+id/btn6"
        android:text="4" />

    <Button
        android:id="@+id/btn3"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="109dp"
        android:text="3" />

    <Button
        android:id="@+id/btn2"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn8"
        android:layout_alignTop="@+id/btn3"
        android:text="2" />

    <Button
        android:id="@+id/btn1"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn3"
        android:layout_alignEnd="@+id/btn7"
        android:text="1" />

    <Button
        android:id="@+id/btnclear"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="60dp"
        android:text="CLEAR" />

    <Button
        android:id="@+id/btn0"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnclear"
        android:layout_alignEnd="@+id/btn8"
        android:text="0" />

    <Button
        android:id="@+id/btnequal"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn7"
        android:layout_alignTop="@+id/btnclear"
        android:text="=" />

    <Button
        android:id="@+id/btndivision"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn9"
        android:layout_alignParentEnd="true"
        android:text="/" />

    <Button
        android:id="@+id/btnmul"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn6"
        android:layout_alignParentEnd="true"
        android:text="*" />

    <Button
        android:id="@+id/btnadd"
        android:textColor="@android:color/holo_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn3"
        android:layout_alignParentEnd="true"
        android:text="+" />

    <Button
        android:id="@+id/btnsub"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnclear"
        android:layout_alignParentEnd="true"
        android:text="-" />

    <TextView
        android:id="@+id/tvcontrol"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_width="397dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="258dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp" />

    <TextView
        android:id="@+id/tvResult"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_width="391dp"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/tvcontrol"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="186dp" />



</RelativeLayout>